<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akila.myapplication.activites.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="@string/sign_up_message"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/sign_up1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="19dp"
                android:hint="@string/hint_email"
                android:id="@+id/email"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="19dp"
                android:id="@+id/username"
                android:hint="@string/hint_name"  />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/surname"
                android:hint="@string/hint_surname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/address1"
                android:hint="@string/hint_address1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/address2"
                android:hint="@string/hint_address2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:hint="@string/hint_city"
                android:id="@+id/city"
                android:inputType="text"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="5"
                android:layout_marginBottom="19dp"
                android:hint="@string/hint_zipcode"
                android:id="@+id/zipcode"
                android:inputType="numberPassword"/>

            <Spinner
                android:id="@+id/state"
                android:layout_width="91dp"
                android:layout_marginBottom="19dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_state"
                android:ems="10" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:hint="@string/hint_password"
                android:id="@+id/password1"
                android:inputType="textPassword"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginBottom="19dp"
                android:hint="@string/hint_retype_password"
                android:id="@+id/password2"
                android:inputType="text"/>

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/text_register" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
